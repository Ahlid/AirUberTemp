@using Microsoft.AspNetCore.Identity
@using AirUberProjeto.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Autenticacao" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right"> 
            <li>
                <button type="submit" class="btn btn-link navbar-btn" style="color: white">Sair  <i class="glyphicon glyphicon-log-out"></i></button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="color: white">
        <li> <a class="btn-lg" style="color: white" asp-area="" asp-controller="Autenticacao" asp-action="Register">Registar</a></li>
        <li><a class="btn-lg" style="color: white" asp-area="" asp-controller="Autenticacao" asp-action="Login">Entrar </a></li>
    </ul>
}
