@using Microsoft.AspNetCore.Identity
@using AirUberProjeto.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager




@if (SignInManager.IsSignedIn(User))
{
    <ul class="nav">
        
        @if (User.IsInRole(Roles.ROLE_HELPDESK))
        {
            <li class="active">
                <a asp-area="" asp-controller="Helpdesk" asp-action="Index">
                    <i class="pe-7s-graph"></i>
                    <p>Dashboard</p>
                </a>
            </li>
            <li class="active">
                <a asp-area="" asp-controller="Helpdesk" asp-action="Clientes">
                    <i class="pe-7s-graph"></i>
                    <p>Clientes</p>
                </a>
            </li>
            <li class="active">
                <a asp-area="" asp-controller="Helpdesk" asp-action="Companhias">
                    <i class="pe-7s-graph"></i>
                    <p>Companhias</p>
                </a>
            </li>
            <li class="active">
                <a asp-area="" asp-controller="Helpdesk" asp-action="Viagens">
                    <i class="pe-7s-graph"></i>
                    <p>Viagens</p>
                </a>
            </li>

        } 
       
        @if (User.IsInRole(Roles.ROLE_CLIENTE))
        {

            <li class="active">
                <a asp-controller="Cliente" asp-action="Creditos">
                    <i class="pe-7s-graph"></i>
                    <p>DashBoard</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Cliente" asp-action="Perfil">
                    <i class="pe-7s-user"></i>
                    <p>Perfil</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Cliente" asp-action="VerViagens">
                    <i class="pe-7s-rocket"></i>
                    <p>Viagens</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Cliente" asp-action="ProcurarOfertas">
                    <i class="pe-7s-map-marker"></i>
                    <p>Viajar</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Cliente" asp-action="Notificacoes">
                    <i class="pe-7s-bell"></i>
                    <p>Notificações</p>
                </a>
            </li>

        }
        
        @if (User.IsInRole(Roles.ROLE_COLABORADOR) ||
           User.IsInRole(Roles.ROLE_COLABORADOR_ADMIN))
        {
            <li class="active">
                <a asp-controller="Companhia" asp-action="PerfilCompanhia">
                    <i class="pe-7s-user"></i>
                    <p>Perfil</p>
                </a>
            </li>

            if(User.IsInRole(Roles.ROLE_COLABORADOR_ADMIN))
            { 
                 <li class="active">
                     <a asp-controller="Companhia" asp-action="VerViagens">
                         <i class="pe-7s-rocket"></i>
                         <p>Viagens</p>
                     </a>
                 </li>
            }

            <li class="active">
                <a asp-controller="Companhia" asp-action="VerColaboradores">
                    <i class="pe-7s-rocket"></i>
                    <p>Colaboradores</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Companhia" asp-action="VerJatos">
                    <i class="pe-7s-rocket"></i>
                    <p>VerJatos</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Companhia" asp-action="VerExtras">
                    <i class="pe-7s-rocket"></i>
                    <p>Extras</p>
                </a>
            </li>
            <li class="active">
                <a asp-controller="Companhia" asp-action="ValidarReservas">
                    <i class="pe-7s-rocket"></i>
                    <p>Validar Reservas</p>
                </a>
            </li>

            <li class="active">
                <a asp-controller="Companhia" asp-action="Notificacoes">
                    <i class="pe-7s-bell"></i>
                    <p>Notificações</p>
                </a>
            </li>
        }

    </ul>

}
else
{
    <li class="active">
        <a asp-controller="Autenticacao" asp-action="Register">
            <i class="pe-7s-bell"></i>
            <p>Registar</p>
        </a>
        <a asp-controller="Autenticacao" asp-action="Login">
            <i class="pe-7s-bell"></i>
            <p>Entrar</p>
        </a>
    </li>
}


