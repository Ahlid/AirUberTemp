@using AirUberProjeto.Models.ClienteViewModels
@model AirUberProjeto.Models.ClienteViewModels.PerfilViewModel

@{
    ViewBag.Title = "Perfil";
    Layout = "_NovoLayout";

   

}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Editar perfil</h4>
                    </div>
                    <div class="content">
                        <form asp-controller="Cliente" asp-action="EditarPerfil" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Cliente.Nome" class="control-label"></label>
                                        <div>
                                            <input asp-for="@Model.Cliente.Nome" class="form-control" />
                                            <span asp-validation-for="@Model.Cliente.Nome" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Cliente.Apelido" class="control-label"></label>
                                        <div>
                                            <input asp-for="@Model.Cliente.Apelido" class="form-control" />
                                            <span asp-validation-for="@Model.Cliente.Apelido" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label asp-for="@Model.Cliente.Contacto" class="control-label"></label>
                                        <div>
                                            <input asp-for="@Model.Cliente.Contacto" class="form-control" />
                                            <span asp-validation-for="@Model.Cliente.Contacto" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Atualizar Perfil</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                        
                                <img id="perfil-img" class="avatar border-gray" src="..\@Model.Cliente.RelativePathImagemPerfil" alt="..." />
                                <h4 class="title">
                                    @Model.Cliente.Nome @Model.Cliente.Apelido<br />
                                    <small>Cliente</small>
                                </h4>
                        
                        </div>
                        <p class="description text-center">
                            <label>Contato</label>
                            @Html.Raw(Model.Cliente.Contacto ?? "Nenhum") <br/>

                            <label>Correio-Eletrónico</label>
                            @Model.Cliente.Email<br />

                            <label>Estado da conta</label>
                            @Html.Raw(Model.Cliente.EmailConfirmed ?
                        "<span class=\"label label-success\">Confirmada</span>" :
                        "<span class=\"label label-warning\" data-placement=\"top\" data-toggle=\"tooltip\" title=\"Um e-mail foi enviado para a sua conta de utilizador. Verifique a sua caixa de correio-eletrónico\">Por confirmar</span>")
                            <br />

                        </p>
                    </div>
                    <hr>
                   
                </div>
            </div>
        </div>
    </div>
</div>


<div style="display: none;">
    <form id="upload" asp-controller="Cliente" asp-action="AlterarImagemPerfil" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-vertical" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Imagem de perfil:</label>
            <input type="file" accept=".jpg,.png" name="file" id="file" />
            <input type="submit" value="Alterar" />
        </div>
    </form>
</div>

<script>

    $('#perfil-img').click(function () {


        $('input[type=file]').trigger('click');

    });

    $('input[type=file]').change(function () {

        document.getElementById("upload").submit();
    });


</script>





