@model IEnumerable<AirUberProjeto.Models.Extra>

@{
    ViewData["Title"] = "VerExtras";
}


<div class="container" style="margin-top: 20px">
        <div class="row">
            <div class="col-md-6">
                <a asp-action="CriarExtra"><img class="img-thumbnail" src="~/images/plus.png" width="40" alt="criar"></a>
                <!--
                    <div >
                        <form asp-controller="Companhia" asp-action="ProcurarExtras">
                            <!-- search --><!--
                            <input type=image src="~/images/aviao-default.svg" width="40" alt="Submit feedback">
                            <input type="text" name="SearchString">
                        </form>
                    </div>-->
            </div>
            <div class="col-md-6">
                <h1>Extras</h1>
            </div>
        </div>
    <div class="w3-center w3-row-padding">
        @foreach (var item in Model)
        {
            <div class="w3-col l4 w3">
                <div class="w3-col l12 w3-card-4 w3-margin w3-container" style="height: 200px">
                    <div style="float: right">
                        <a asp-action="EditarExtra" asp-route-id="@item.ExtraId"><img class="img-thumbnail" src="~/images/edit.png" width="40" alt="editar"></a>
                        <a asp-action="ApagarExtra" asp-route-id="@item.ExtraId"><img class="img-thumbnail" src="~/images/delete.png" width="40" alt="apagar"></a>
                    </div>
                    <div style="clear: both">
                        <img />
                        <h2 class="w3-center">@item.Nome</h2>
                        <h3 class="w3-center">Preço @item.Valor € <span>(x Créditos)</span></h3>
                        <h5 class="w3-center">Tipo de extra: @item.TipoExtra.Nome</h5>

                        <div>
                            <img class="img-thumbnail" src="~/images/aviao-default.svg" width="40" alt="plus">
                            <!-- Lista de aviões que suportam o extra -->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>