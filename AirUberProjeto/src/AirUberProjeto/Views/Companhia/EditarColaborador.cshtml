@model AirUberProjeto.Models.Colaborador

@{
    ViewData["Title"] = "EditarColaborador";
    Layout = "_NovoLayout";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Editar Colaborador</h4>
                        <p class="category">Altere os dados do colaborador</p>
                    </div>

                    <div class="content">
                        <form asp-controller="Companhia" asp-action="EditarColaborador" method="post" class="form-vertical">
                            <input type="hidden" asp-for="Id" />
                            <div>

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Nome" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="Nome" class="form-control" />
                                        <span asp-validation-for="Nome" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Apelido" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="Apelido" class="form-control" />
                                        <span asp-validation-for="Apelido" class="text-danger" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="col-md-2 control-label"></label>
                                    <div class="col-md-10">
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger" />
                                    </div>
                                </div>
                           
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            <input asp-for="IsAdministrador" />
                                            <label asp-for="IsAdministrador"></label>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                
                                <div class="content">
                                    <input type="submit"  style="margin-right: 6px" value="Editar" class="btn btn-default" />
                                    <a class="btn" style="margin-right: 6px" asp-controller="Autenticacao" asp-action="ChangePassword">Alterar Password</a>
                                    <a class="btn" asp-action="VerColaboradores">Ver Colaboradores</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
