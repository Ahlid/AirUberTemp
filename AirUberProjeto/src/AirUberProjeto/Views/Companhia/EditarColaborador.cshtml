@model AirUberProjeto.Models.Colaborador

@{
    ViewData["Title"] = "EditarColaborador";
    Layout = "_NovoLayout";
}

<h2>EditarColaborador</h2>

<form asp-controller="Companhia" asp-action="EditarColaborador" method="post" class="form-vertical">
    <input type="hidden" asp-for="Id" />
    <div class="form-horizontal">
        <h4>Colaborador</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Apelido" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Apelido" class="form-control" />
                <span asp-validation-for="Apelido" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanhiaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanhiaId" type="text" class="form-control" value=@ViewBag.companhia disabled />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsAdministrador" />
                    <label asp-for="IsAdministrador"></label>
                </div>
            </div>
        </div>
        <a asp-controller="Autenticacao" asp-action="ChangePassword">Alterar Password</a>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
