@model AirUberProjeto.Models.Extra

@{
    ViewData["Title"] = "View";
    Layout = "_NovoLayout";
}

<h2>View</h2>

<form asp-controller="Companhia" asp-action="EditarExtra" method="post" class="form-vertical">
    <input type="hidden" asp-for="ExtraId" />
    <div class="form-horizontal">
        <h4>Jato</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Valor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Valor" type="text" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CompanhiaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CompanhiaId" type="text" class="form-control" value=@ViewBag.companhia disabled />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TipoExtraId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TipoExtraId" class="form-control" asp-items="ViewBag.tipos"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="VerExtras">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
