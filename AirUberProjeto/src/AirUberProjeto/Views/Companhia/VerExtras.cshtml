@model IEnumerable<AirUberProjeto.Models.Extra>

@{
    ViewData["Title"] = "VerExtras";
}

<h2>Extras</h2>

<p>
    <a asp-action="CriarExtra">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoExtra.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)<span> €</span>
                </td>
                <th>
                    @Html.DisplayFor(model => item.TipoExtra.Nome)
                </th>
                <td>
                    <a asp-action="EditarExtra" asp-route-id="@item.ExtraId">Editar</a> |
                    <a asp-action="ApagarExtra" asp-route-id="@item.ExtraId">Apagar</a>
                </td>
            </tr>
}
    </tbody>
</table>
