@model IEnumerable<AirUberProjeto.Models.Jato>

@{
    ViewData["Title"] = "VerJatos";
}


<div class="container" style="margin-top: 20px">
    <div class="row">
        <div class="col-md-6">
            <a asp-action="CriarJato"><img class="img-thumbnail" src="~/images/plus.png" width="40" alt="criar"></a>
            <!--
                <div >
                    <form asp-controller="Companhia" asp-action="ProcurarExtras">
                        <!-- search -->
            <!--
                    <input type=image src="~/images/aviao-default.svg" width="40" alt="Submit feedback">
                    <input type="text" name="SearchString">
                </form>
            </div>-->
        </div>
        <div class="col-md-6">
            <h1>Jatos</h1>
        </div>
    </div>
    <div class="w3-center w3-row-padding">
        @foreach (var item in Model)
        {
            <div class="w3-col l4 w3">
                <div class="w3-col l12 w3-card-4 w3-margin w3-container" style="height: 265px">
                    <div style="float: right">
                        <a asp-action="EditarJatos" asp-route-id="@item.JatoId"><img class="img-thumbnail" src="~/images/edit.png" width="40" alt="editar"></a>
                        <a asp-action="ApagarJato" asp-route-id="@item.JatoId"><img class="img-thumbnail" src="~/images/delete.png" width="40" alt="apagar"></a>
                    </div>
                    <div style="clear: both;">
                        <img src="..\@item.RelativePathImagemPerfil" width="100" alt="airplane photo"/>
                        <h2 style="display: inline; padding-left: 15px; " class="w3-center">@item.Nome</h2>
                        <img class="img-thumbnail" src="~/images/calendar.png" alt="calendar">

                        <div style="text-align:left">
                            <h5><strong>Tipo de avião: </strong><span>@item.Modelo.TipoJato.Nome</span></h5>
                            <h5><strong>Posição actual: </strong><span>@item.Aeroporto.Nome</span></h5>
                            <h5><strong>Operacional: </strong><span>@(item.EmFuncionamento ? "Sim" : "Não")</span></h5>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>