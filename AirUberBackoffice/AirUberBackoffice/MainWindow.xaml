                    <ListBox.ItemTemplate >
                        <DataTemplate>

                            <Border  BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Background="AliceBlue" Width="{Binding ActualWidth, ElementName=ListBoxPaises}">
                                <StackPanel  Margin="0,10,0,10" >
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  TextAlignment="Center" Width="{Binding ActualWidth, ElementName=ListBoxPaises}" Text="{Binding Path=Nome}"></TextBlock>

                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
