<Window x:Class="AirUberBackoffice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirUberBackoffice"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="AirUber Backoffice - Home Page"
       >

    <Window.Resources>
      
        <Style x:Key="LabelFontStyle">
            <Setter Property="Control.FontFamily" Value="Century Gothic" />
            <Setter Property="Control.FontWeight" Value="Bold" />
            <Setter Property="Control.Foreground" Value="SteelBlue" />
        </Style>

        <ControlTemplate x:Key="TextBoxTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Name="Border" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="5" Background="AliceBlue" TextBlock.Foreground="DarkGray">
                <ScrollViewer VerticalAlignment="Center" Margin="2" x:Name="PART_ContentHost"/>
            </Border>
        </ControlTemplate>

    </Window.Resources>

    <DockPanel Name="Principal">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Ficheiro">
                <MenuItem Header="Guardar" Click="onGuardarClick"/>
                <MenuItem Header="Sair" Click="onSairClick"/>
            </MenuItem>
            <MenuItem Header="Viagens">
                <MenuItem Header="Ver Viagens" Click="onVerTodasViagensClick"/>
                <MenuItem Header="Aeroportos">
                    <MenuItem Header="Visualizar" Click="onVerTodosAeroportosClick"/>
                    <MenuItem Header="Criar" Click="onCriarAeroportosClick"/>
                    <MenuItem Header="Editar" Click="onEditarAeroportosClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarAeroportosClick"/>
                </MenuItem>
                <MenuItem Header="Ver Países" Click="onVerTodosPaisesClick"/>
                <MenuItem Header="Ver Cidades" Click="onVerTodasCidadesClick"/>
            </MenuItem>
            <MenuItem Header="Clientes">
                <MenuItem Header="Listar" Click="onVerTodosClientesClick"/>
                <MenuItem Header="Editar" Click="onEditarClienteClick"/>
                <MenuItem Header="Eliminar" Click="onEliminarClienteClick"/>
            </MenuItem>
            <MenuItem Header="Companhias">
                <MenuItem Header="Ver Companhias" Click="onVerTodasCompanhiasClick"/>
                <MenuItem Name="MenuItem_VerColaboradores" Header="Ver Colaboradores" Click="onVerColaboradoresClick"/>
                <MenuItem Name="MenuItem_VerReservas" Header="Ver Reservas" Click="onVerReservasClick"/>
                <MenuItem Name="MenuItem_VerJatos" Header="Ver Jatos" Click="onVerJatosClick"/>
                <MenuItem Name="MenuItem_VerExtras" Header="Ver Extras" Click="onVerExtrasClick"/>
            </MenuItem>
            <MenuItem Header="Extras">
                <MenuItem Header="Extras">
                    <MenuItem Header="Listar" Click="onVerTodosExtrasClick"/>
                    <MenuItem Header="Criar" Click="onCriarExtrasClick"/>
                    <MenuItem Header="Editar" Click="onEditarExtrasClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarExtrasClick"/>
                </MenuItem>
                <MenuItem Header="Tipo de Extras">
                    <MenuItem Header="Listar" Click="onVerTipoExtrasClick"/>
                    <MenuItem Header="Criar" Click="onCriarTipoExtrasClick"/>
                    <MenuItem Header="Editar" Click="onEditarTipoExtrasClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarTipoExtrasClick"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Jatos">
                <MenuItem Header="Jatos">
                    <MenuItem Header="Listar" Click="onVerTodosJatosClick"/>
                    <MenuItem Header="Criar" Click="onCriarJatoClick"/>
                    <MenuItem Header="Editar" Click="onEditarJatoClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarJatoClick"/>
                </MenuItem>
                <MenuItem Header="Modelos" >
                    <MenuItem Header="Listar" Click="onVerTodosModelosJatosClick"/>
                    <MenuItem Header="Criar" Click="onCriarModeloJatoClick"/>
                    <MenuItem Header="Editar" Click="onEditarModeloJatoClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarModeloJatoClick"/>
                </MenuItem>
                <MenuItem Header="Tipo de Jatos">
                    <MenuItem Header="Listar" Click="onVerTipoDeJatosClick"/>
                    <MenuItem Header="Criar" Click="onCriarTipoDeJatosClick"/>
                    <MenuItem Header="Editar" Click="onEditarTipoDeJatosClick"/>
                    <MenuItem Header="Eliminar" Click="onEliminarTipoDeJatosClick"/>
                </MenuItem>
                
                
                
            </MenuItem>
            <MenuItem Header="Ajuda">
                <MenuItem Header="Ver Ajuda" Click="onAjudarClick"/>
                <MenuItem Header="Sobre" Click="onSobreClick"/>
            </MenuItem>
        </Menu>
       
        <StackPanel DockPanel.Dock="Left">
            <Grid Name="FormPaises" DataContext="{Binding ElementName=ListBoxPaises, Path=SelectedItem}"  Margin="10"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="280"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
                <Label Content="Identificador:" Grid.Row="0" HorizontalAlignment="Left" FontSize="12" Margin="10"  Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Pais:" Grid.Row="1" HorizontalAlignment="Left" FontSize="12" Margin="10"  Style="{ StaticResource LabelFontStyle }" />
                <TextBox Name="TextBoxPais_Id"  Grid.Row="0" Grid.Column="1"  Text="{Binding Path=PaisId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False"  Template="{ StaticResource TextBoxTemplate }" />
                <TextBox Name="TextBoxPais_Nome"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" Template="{ StaticResource TextBoxTemplate }" />
                <ListBox Name="ListBoxPaises" Grid.Row="0" Grid.Column="2"  Grid.RowSpan="3" Margin="10.4,10,9.6,-276.8">
                    <ListBox.ItemTemplate >
                        <DataTemplate>

                            <Border  BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Background="AliceBlue" Width="{Binding ActualWidth, ElementName=ListBoxPaises}">
                                <StackPanel  Margin="0,10,0,10" >
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  TextAlignment="Center" Width="{Binding ActualWidth, ElementName=ListBoxPaises}" Text="{Binding Path=Nome}"></TextBlock>
                                        
                                    </StackPanel>
                                    
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        <Grid Name="FormCidades" DataContext="{Binding ElementName=ListBoxCidades, Path=SelectedItem}"   Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="280"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
             <Label Content="Identificador:" Grid.Row="0" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Cidade:" Grid.Row="1" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
            <Label Content="Pais:" Grid.Row="2" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <TextBox Name="TextBoxCidade_Id" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="0" Grid.Column="1"  Text="{Binding Path=CidadeId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxCidade_Nome" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
