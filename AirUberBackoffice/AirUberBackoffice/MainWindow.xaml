                <TextBox Name="TextBoxCompanhia_DataCriacao" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="8" Grid.Column="1"  Text="{Binding Path=DataCriacao}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="200" IsEnabled="False" />
