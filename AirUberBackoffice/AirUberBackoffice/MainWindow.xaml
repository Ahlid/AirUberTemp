                <Label Content="Latitude:" Grid.Row="3" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Longitude:" Grid.Row="4" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <TextBox Name="TextBoxAeroporto_Id"  Template="{ StaticResource TextBoxTemplate }" Grid.Row="0" Grid.Column="1"  Text="{Binding Path=CidadeId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxAeroporto_Nome" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxAeroporto_NomeCidade" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="2" Grid.Column="1"  Text="{Binding Path=Cidade.Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxAeroporto_Latitude" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="3" Grid.Column="1"  Text="{Binding Path=Latitude}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxAeroporto_Longitude" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="4" Grid.Column="1"  Text="{Binding Path=Longitude}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <ListBox Name="ListBoxAeroportos" Grid.Row="0" Grid.Column="2"  Grid.RowSpan="3" Margin="10.4,10,9.6,-276.8" >
                    <ListBox.ItemTemplate >
                        <DataTemplate>

                            <Border  BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Background="AliceBlue" Width="{Binding ActualWidth, ElementName=ListBoxPaises}">
                                <StackPanel  Margin="0,10,0,10" >
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  TextAlignment="Center" Width="{Binding ActualWidth, ElementName=ListBoxPaises}" Text="{Binding Path=Nome}"></TextBlock>

                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            

        <Grid Name="FormReservas" DataContext="{Binding ElementName=ListBoxReservas, Path=SelectedItem}"  Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="280"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
                <Label Content="Identificador:" Grid.Row="0" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Data Partida:" Grid.Row="1" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Data Chegada:" Grid.Row="2" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
