                <Label Content="Aeroporto Destino:" Grid.Row="4" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Jato:" Grid.Row="5" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Companhia:" Grid.Row="6" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Cliente:" Grid.Row="7" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Custo:" Grid.Row="8" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Avaliacao:" Grid.Row="9" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <TextBox Name="TextBoxReserva_Id" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="0" Grid.Column="1"  Text="{Binding Path=ReservaId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_DataPartida" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=DataPartida}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_DataChegada" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="2" Grid.Column="1"  Text="{Binding Path=DataChegada}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_AeroportoPartida" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="3" Grid.Column="1"  Text="{Binding Path=AeroportoPartida.Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_AeroportoDestino" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="4" Grid.Column="1"  Text="{Binding Path=AeroportoDestino.Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_Jato" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="5" Grid.Column="1"  Text="{Binding Path=Jato.Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_Companhia" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="6" Grid.Column="1"  Text="{Binding Path=Companhia.Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_Cliente" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="7" Grid.Column="1"  Text="{Binding Path=ApplicationUserId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_Custo" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="8" Grid.Column="1"  Text="{Binding Path=Custo}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <TextBox Name="TextBoxReserva_Avaliação" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="9" Grid.Column="1"  Text="{Binding Path=Avaliacao}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="180" IsEnabled="False" />
                <ListBox Name="ListBoxReservas" Grid.Row="0" Grid.Column="2"  Grid.RowSpan="3" Margin="10.4,10,9.6,-276.8">
                    <ListBox.ItemTemplate >
                        <DataTemplate>

                            <Border  BorderThickness="1" BorderBrush="SteelBlue" CornerRadius="4" Background="AliceBlue" Width="{Binding ActualWidth, ElementName=ListBoxPaises}">
                                <StackPanel  Margin="0,10,0,10" >
                                    <StackPanel  Orientation="Horizontal">
                                        <TextBlock  TextAlignment="Center" Width="{Binding ActualWidth, ElementName=ListBoxPaises}" Text="{Binding Path=DataChegada}"></TextBlock>

                                    </StackPanel>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>



        <Grid Name="FormClientes" DataContext="{Binding ElementName=ListBoxClientes, Path=SelectedItem}"  Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="600"/>
                
                    <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Falta as fotos e as listas de reservas e tal... -->
                <Label Content="Identificador:" Grid.Row="0" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Nome:" Grid.Row="1" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Apelido:" Grid.Row="2" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
