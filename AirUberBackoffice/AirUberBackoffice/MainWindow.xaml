                <TextBox Name="TextBoxCompanhia_Id" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="0" Grid.Column="1"  Text="{Binding Path=CompanhiaId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="200" IsEnabled="False" />
                <TextBox Name="TextBoxCompanhia_Nome" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="200" IsEnabled="False" />
