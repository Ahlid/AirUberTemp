                <Label Content="Ativo:" Grid.Row="4" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Contacto:" Grid.Row="5" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />
                <Label Content="Número de Créditos:" Grid.Row="6" HorizontalAlignment="Left" FontSize="12" Margin="10" Style="{ StaticResource LabelFontStyle }" />

                <TextBox Name="TextBoxCliente_Id" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="0" Grid.Column="1"  Text="{Binding Path=ApplicationUserId}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
                <TextBox Name="TextBoxCliente_Nome" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="1" Grid.Column="1"  Text="{Binding Path=Nome}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
                <TextBox Name="TextBoxCliente_Apelido" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="2" Grid.Column="1"  Text="{Binding Path=Apelido}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
                <TextBox Name="TextBoxCliente_DataCriacao" Template="{ StaticResource TextBoxTemplate }"  Grid.Row="3" Grid.Column="1"  Text="{Binding Path=DataCriacao}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
            <!-- não deve ser uma textbox-->
                <TextBox Name="TextBoxCliente_Ativo"  Template="{ StaticResource TextBoxTemplate }" Grid.Row="4" Grid.Column="1"  Text="{Binding Path=Ativo}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
                <TextBox Name="TextBoxCliente_Contacto"  Template="{ StaticResource TextBoxTemplate }" Grid.Row="5" Grid.Column="1"  Text="{Binding Path=Contacto}" HorizontalAlignment="Left" FontSize="12" Margin="10" Width="250" IsEnabled="False" />
